<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
		  package="dukaconnect.newsapi">


	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.INTERNET" />

	<application
		android:name=".app.AppController"
		android:allowBackup="true"
		android:icon="@mipmap/newsicon"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher_round"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">

		<activity android:name=".MainSignInActivity" android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>
				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>

		</activity>

		<activity
			android:name=".EmailPasswordActivity"
			android:label="Email SignIn"
			android:theme="@style/AppTheme.NoActionBar">
		</activity>
		<activity
			android:name=".MainActivity"
			android:label="Dashboard Activity"
			android:theme="@style/AppTheme.NoActionBar">


		</activity>
		<activity
			android:name=".ArticleActivity"
			android:label="Article Activity"
			android:theme="@style/AppTheme">

		</activity>
		<activity
			android:name=".WebViewActivity"
			android:label="Article"
			android:theme="@style/AppTheme">

		</activity>
	</application>

</manifest>